from tkinter import *
from tkinter import ttk

#janela
root = Tk()
#titulo do app
root.title("Milhas para km")
#gerando loop para renderização intermitente.

def senha():
   alfabeto = "abcdefghijklmnopqrstuvwxyz"
   caracteres_especial = "@!#%&*/"
   número = "0123456789"

